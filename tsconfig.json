{
  "include": ["src", "test"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "strict": true,
    "incremental": true,

    "jsx": "react",
    "lib": ["dom", "esnext"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
