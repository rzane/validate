{
  "name": "@stackup/validate",
  "version": "0.0.0",
  "license": "MIT",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "description": "Functional, tree-shakeable, schema validation",
  "repository": "github:rzane/validate",
  "homepage": "https://github.com/rzane/validate#readme",
  "bugs": "https://github.com/rzane/validate/issues",
  "engines": {
    "node": ">=10"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "microbundle --tsconfig tsconfig.build.json",
    "prepack": "microbundle --tsconfig tsconfig.build.json",
    "test": "jest",
    "lint": "eslint src test --ext .ts",
    "docs": "doctoc README.md",
    "size": "size-limit"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "prettier": {
    "arrowParens": "avoid",
    "trailingComma": "none"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "1.2 KB"
    },
    {
      "path": "dist/index.esm.js",
      "limit": "1.2 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.2",
    "@stackup/eslint-config": "^1.0.0",
    "@types/jest": "^26.0.22",
    "doctoc": "^2.0.0",
    "eslint": "^7.23.0",
    "jest": "^26.6.3",
    "microbundle": "^0.13.0",
    "prettier": "^2.2.1",
    "size-limit": "^4.10.2",
    "ts-jest": "^26.5.4",
    "tslib": "^2.2.0",
    "typescript": "^4.2.3"
  }
}
